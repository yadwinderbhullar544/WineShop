@page
@model WineShop.Pages.Customer.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<h4>Customer</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Customer.ID" />
            <div class="form-group">
                <label asp-for="Customer.Name" class="control-label"></label>
                <input asp-for="Customer.Name" class="form-control" />
                <span asp-validation-for="Customer.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Customer.Age" class="control-label"></label>
                <input asp-for="Customer.Age" class="form-control" />
                <span asp-validation-for="Customer.Age" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Customer.Email" class="control-label"></label>
                <input asp-for="Customer.Email" class="form-control" />
                <span asp-validation-for="Customer.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Customer.RateListID" class="control-label"></label>
                <select asp-for="Customer.RateListID" class="form-control" asp-items="ViewBag.RateListID"></select>
                <span asp-validation-for="Customer.RateListID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Customer.WineID" class="control-label"></label>
                <select asp-for="Customer.WineID" class="form-control" asp-items="ViewBag.WineID"></select>
                <span asp-validation-for="Customer.WineID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
